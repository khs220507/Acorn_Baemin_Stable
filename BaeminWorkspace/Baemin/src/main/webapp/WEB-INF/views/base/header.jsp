<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
<script src="https://code.jquery.com/jquery-latest.js"></script> 
<meta name="viewport" content="width=device-width,initial-scale=1">
<style>

 /* reset css */
        a{
            text-decoration: none;
        }
            
        button{
            outline: none;	
            cursor: pointer;	/* 손가락모양 */
        }
        *{
          margin: 0;
          margin: 0;
          padding: 0;
          box-sizing: border-box;
        }
        body{
          display: flex;
          flex-direction: column;
          align-items: center;
          height: 100vh;
        }
    
        /* 헤더 ////////////////////////////////////////////////////*/
        header{
          display: flex;
          flex: 1.2;
          justify-content:center;
          align-items: center;
          width: 100vw;
          background-color: #48D1CC;

          position: relative;
        }
        .header-wrap{
    	width:1280px;
    	display:flex;
   		 }
        .logo{
          flex: 2.5;
          display: flex;
          justify-content: flex-start;
          align-items: center;
          
        }
        .logo a{
            color: white;
            font-size: 40px;
        }
    
    
        .info-wrap{
          flex: 5;
        }
    
        .address-wrap{
          width: 400px;
            display: flex;
          margin: 0 auto;
            justify-content: center;
            align-items: center;
        }
        .address-wrap p{
          flex:5;
            color: white;
            font-size: 20px;
          cursor: pointer;
        }
        
        .address-wrap img{
             width: 20px;
             height: 20px;
          cursor: pointer;
         }
    
         .map-icon{
          margin-left: 10px;
         }
    
    
         .search-wrap{
             width: 400px;
             height: 35px;
          display: flex;
          align-items: center;
    
             background-color: white;
             border-radius: 10px;
             margin: 10px auto;
         }
         .search-wrap input{
             width: 360px;
             height: 30px;
             margin-left: 10px;
          
             border: none;
             outline:none;
         }
         .search-wrap img{
              width: 25px;
              height: 25px;
            cursor: pointer;
          }
        
        .login-btn-wrap{
          flex: 2.5;
          display: flex;
          justify-content: flex-end;
          align-items: center;
        }
        
        /* 로그인 안했을 때 */
        .login-btn-wrap a{
            color: white;
            font-size: 30px;
        }
    
       /* 로그인 했을때 */
       .menu-icon{
       	width: 40px;
       	height: 40px;
       }
       .menu-icon:hover .hidden-menu{
        display: block;
       }

       .hidden-menu{
         width: 200px;
         height: 210px;
         list-style: none;
         background-color: rgba(71, 209, 205, 0.7);
         border-radius: 10px;
         padding: 10px;
         position: absolute;
         bottom: -210px;
         right: 180px;

         display: none;
         transition: .3s;
       }
       .hidden-menu li{
        height: 40px;
        color: white;
        text-align: center;
        position: relative;
       }
       .hidden-menu img{
        width: 30px;
        height: 30px;
        
        position: absolute;
        left: 0px;
        top: -3px;
       }
    
</style>

</head>
<body>

    <header>
     <div class="header-wrap">
          <div class="logo">
              <a href="/baemin/home">배달의민족</a>
          </div>
          <div class="info-wrap">
              <div class="search-wrap">
                <input type="text">
                <img src="data:image/png;base64,">
              </div>
          </div>
          <div class="login-btn-wrap">
          	
          	<!-- 로그인 안했을 때 -->
          	<!-- <a href="">로그인</a> -->
          	
          	<!-- 로그인 했을 때 -->
          	<img class="menu-icon" onmouseover="show_hidden_menu()" onmouseout="hide_hidden_menu()" src="data:image/png;base64,">
          
          </div>

          <ul class="hidden-menu">
            <li>
              <img src="data:image/png;base64,">
              장바구니
            </li>
            <li>
              <img src="data:image/png;base64,">
              찜
            </li>
            <li>
              <img src="data:image/png;base64,">
              주문내역
            </li>
            <li>
              <img src="data:image/png;base64,">
              내정보수정
            </li>
            <li>
              <img src="data:image/png;base64,">
              로그아웃
            </li>
          </ul>
    	</div>
      </header>

      <script>
        function show_hidden_menu(){
          let hidden_menu = document.querySelector(".hidden-menu");
          hidden_menu.style.display="block";
        }
      
        function hide_hidden_menu(){
          let hidden_menu = document.querySelector(".hidden-menu");
          hidden_menu.style.display="none";
        }

      </script>
</body>
</html>